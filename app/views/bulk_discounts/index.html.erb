<div id="create-new">
  <%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant.id) %>
</div>

<div id="all-discounts">
  <% @bulk_discounts.each do |bd| %>
    <div id="discount-<%= bd.id %>">
      <%= number_to_percentage(bd.percentage_discount, precision: 0) %> off 
      <%= bd.quantity_threshold %> or more
      <%= link_to "View", merchant_bulk_discount_path(bd.merchant_id, bd.id) %> || 
      <%= link_to "Delete", merchant_bulk_discount_path(bd.merchant_id, bd.id), method: :delete %><br>
    </div>
  <% end %>
</div>